{
  "name": "base-react",
  "version": "0.0.1",
  "description": "Base ReactJS TypeScript Project",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server",
    "clear": "rm -rf build node_modules",
    "build": "NODE_ENV=production webpack --progress",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dyemane/base-react.git"
  },
  "keywords": [
    "react",
    "typescript"
  ],
  "author": "Dino Yemane",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dyemane/base-react/issues"
  },
  "homepage": "https://github.com/dyemane/base-react#readme",
  "dependencies": {
    "@types/react": "^16.0.22",
    "@types/react-dom": "^16.0.3",
    "@types/react-router-dom": "^4.2.1",
    "mobx": "^3.3.1",
    "mobx-react": "^4.3.5",
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.6",
    "@types/jest": "^22.0.1",
    "@types/react-css-modules": "^4.6.0",
    "awesome-typescript-loader": "^3.3.0",
    "css-loader": "^0.28.7",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "sass-loader": "^6.0.6",
    "ts-jest": "^22.0.1",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^3.2.0",
    "webpack": "^3.8.1"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/src/test/setup.tsx",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$":
        "<rootDir>/__mocks__/fileMock.tsx",
      "\\.(scss|css|less)$": "<rootDir>/src/test/__mocks__/styleMock.tsx"
    }
  }
}
